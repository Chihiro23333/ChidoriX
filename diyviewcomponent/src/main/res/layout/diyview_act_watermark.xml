<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.bilibili.diyviewcomponent.watermark.WatermarkBoard
        android:id="@+id/watermarkBoard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center_horizontal"/>

    <com.bilibili.diyviewcomponent.watermark.WatermarkActionbar
        android:id="@+id/bbb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

    <Button
        android:id="@+id/bt_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location"/>

    <ImageView
        android:id="@+id/iv_bmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/color_B9F32E"/>
</FrameLayout>