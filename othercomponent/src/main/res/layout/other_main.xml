<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_notifacation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="notifacation" />

        <Button
            android:id="@+id/bt_layoutmanager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="layoutmanager" />

        <Button
            android:id="@+id/bt_snaphelper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="snaphelper" />

        <Button
            android:id="@+id/bt_frg_act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="frg_act" />

        <Button
            android:id="@+id/bt_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fragment" />

    </LinearLayout>
</ScrollView>